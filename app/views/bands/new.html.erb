<h1>Create a Band</h1>

<form action="<%= bands_url %>" method="post">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

  <label for="name">Name of the Band</label>
  <input id="name" type="text" name="band[name]" value="<%= @band.name %>">
  <br>
  <br>

  <input type="submit" value="Create Band">

</form>
